{
  "name": "now-boltwall",
  "version": "3.0.1",
  "main": "./cli/index.js",
  "description": "A command line tool that makes it easy to configure and deploy a lightning-enabled paywall server w/ boltwall",
  "author": "Bucko",
  "license": "MIT",
  "private": false,
  "preferGlobal": true,
  "bin": {
    "now-boltwall": "./bin/now-boltwall"
  },
  "scripts": {
    "postversion": "git push && git push --tags",
    "clean": "rm -rf bin",
    "build": "npm run clean && ncc build ./cli/index.js -o ./bin/now-boltwall && chmod +rx ./bin/now-boltwall/index.js && cp -R now/ ./bin/now-boltwall/now",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "@zeit/ncc": "^0.21.0",
    "chalk": "^3.0.0",
    "commander": "^4.1.0",
    "dotenv": "^8.2.0",
    "inquirer": "^7.0.3"
  },
  "engines": {
    "node": ">0.10.0"
  },
  "devDependencies": {
    "babel-eslint": "10.0.2",
    "eslint": "6.1.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "prettier": "1.18.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tierion/now-boltwall.git"
  }
}
